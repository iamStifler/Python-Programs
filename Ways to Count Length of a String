#  Here 4 ways are given to count length of a string.

# 1st

str = "Stifler"
print(len(str))



# 2nd
# using for loop

# Returns length of string
def findLen(str):
    counter = 0
    for i in str:
        counter += 1
    return counter
str = "Stifler"
print(findLen(str))



# 3rd
# using while loop.


# Returns length of string
def findLen(str):
    counter = 0
    while str[counter:]:
        counter += 1
    return counter
str = "Stifler"
print(findLen(str))



# 4th
# using join and count

# Returns length of string
def findLen(str):
    if not str:
        return 0
    else:
        some_random_str = 'py'
        return ((some_random_str).join(str)).count(some_random_str) + 1
str = "Stifler"
print(findLen(str))
